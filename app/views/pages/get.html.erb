				},
				{
					:title => "software.informer",
					:url => "http://stoffi.software.informer.com/"
				}
			]
			%>
			<ul class='vertical'>
				<% mirrors.each do |m| %>
					<li>
						<%=link_to m[:url] do %>
							<%= image_tag "gfx/buttons/#{m[:title].downcase}.png" %>
