<article class='fullwidth' id='old'>
	<section>
		<h1><%=t "home.old.title" %></h1>
		<p><%=t "home.old.subtitle" %></p>
		<p><%=t "home.old.call" %></p>
		
		<div id="browsers">
	
			<%
			browsers = [
				["Chrome", "chrome", "www.google.com/chrome"],
				["Internet Explorer", "ie", "www.microsoft.com/ie/"],
				["Firefox", "firefox", "getfirefox.com"],
				["Safari", "safari", "support.apple.com/downloads/#safari"],
				["Opera", "opera", "www.opera.com/download/"]
			]
		
			hasBrowser = false
			i = 0
			browsers.each do |b|
				if @browser == b[1]
					hasBrowser = true
					browsers.insert(2, browsers.delete_at(i))
					break
				end
				i += 1
			end
		
			browsers.each do |b|
				if @browser == b[1]
					img = b[1] + "_large"
					style = "large"
				else
					img = b[1] + "_small"
					style = "small"
				end
				%>
				<span class="<%=style%> browser">
					<%=link_to image_tag("gfx/browsers/#{img}.png") + content_tag(:span, b[0], class: 'txt'), "http://#{b[2]}" %>
				</span>
			<% end %>
		</div>
	</section>
</article>
<%=link_to t("home.old.link"), params.merge({dangerous: :ok}), class: 'right', id: 'skip' %>
