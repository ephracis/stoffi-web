<% content_for :title do %>
	<%= @user.name %>
<% end %>

<article class='tabbed fullwidth'>
	<section class='head'>
		<div class='left'>
			<div class='top'></div>
			<div class='line'></div>
			<div class='bottom'>
				<span><%=t 'profile.type.' + (@user.admin? ? 'admin' : 'user') %></span>
			</div>
		</div>
		<div class='right'>
			<div class='top'>
				<h1><%=d @user.name %></h1>
			</div>
			<div class='line'></div>
			<div class='bottom'>
				<span>
					<%=t "profile.points" %>:
					<%= number_with_delimiter @user.points, locale: current_locale %>
				</span>
				<span>
					<%=t "profile.listens" %>:
					<%= number_with_delimiter @user.listens.count, locale: current_locale %>
				</span>
			</div>
		</div>
		<div class='image'>
			<div class='image-border'>
				<%= image_tag @user.picture %>
			</div>
		</div>
	</section>
	
