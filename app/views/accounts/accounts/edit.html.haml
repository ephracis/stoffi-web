- tabs = { general: { icon: 'fa-sliders' },
           accounts: { icon: 'fa-globe' } }
.row#settings{ data: { ng: { controller: 'SettingsController' } } }
  .col-sm-3.col-md-2
    %ul.nav.nav-pills.nav-stacked.hidden-xs
      - tabs.each do |t,v|
        %li{ class: "{{tab == '#{t}' ? 'active' : ''}}" }
          %a{ data: { ng: { click: "setTab('#{t}')" } } }
            %span.fa.fa-fw{ class: v[:icon] }
            = t "accounts.edit.#{t}.tab"


    %ul.nav.nav-tabs.visible-xs
      - tabs.each do |t,v|
        %li{ class: "{{tab == '#{t}' ? 'active' : ''}}" }
          %a{ data: { ng: { click: "setTab('#{t}')" } } }
            %span.fa.fa-fw{ class: v[:icon] }
            
            
  - tabs.each do |t,v|
    .col-sm-9.col-md-10{ data: { ng: { show: "tab == '#{t}'" } } }
      = render "accounts/accounts/edit/#{t}"
